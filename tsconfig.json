{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@www/*": [
                "www/*"
            ],
            "@/*": [
                "src/*"
            ],
            "__ROOT__/*": [
                "*"
            ]
        },
        "types": [
            "webpack-env",
            "node"
        ],
        "typeRoots": [
            "./typings"
        ],
        "noImplicitAny": false,
        "noImplicitThis": false,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "egg/node_modules",
        "egg/*"
    ]
}
